{
  "name": "rest-express",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",

    "build": "vite build && esbuild server/index.ts --bundle --platform=node --format=esm --outfile=dist/server/index.js --packages=external",

    "start": "cross-env NODE_ENV=production node dist/server/index.js",

    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push"
  },
  "engines": { "node": "20.x" },
  "main": "dist/server/index.js"
}
